@page
@model BAIS3110Authentication.Pages.Admin.RegisterModel
@{
}

<h1>Admin - Create User</h1>
<div>
    @Model.Message
</div>
<form method="post">
    <div class="form-group">
        <label asp-for="UserName" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserName" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserEmail" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserEmail" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserPassword" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserPassword" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserRole" class="col-form-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="UserRole" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm">Create User</button>
    </div>
</form>
@Model.Message;